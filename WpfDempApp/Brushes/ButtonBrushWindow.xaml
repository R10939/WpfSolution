<Window x:Class="WpfDempApp.Brushes.ButtonBrushWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDempApp.Brushes"
        mc:Ignorable="d"
        Title="ButtonBrushWindow" Height="300" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <Button Grid.Row="0" Content="This is the first button" Height="45" Background="{StaticResource LinearBrush2}"/>
        <Button Grid.Row="1" Content="This is the second button" Height="45" Background="{StaticResource RadialBrush1}"/>
        <Button Grid.Row="2" Content="This is the third button" Height="45" Background="{StaticResource ALinearBrush2}"/>
    </Grid>
</Window>
