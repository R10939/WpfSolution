<Window x:Class="WpfDempApp.Layouts.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDempApp.Layouts"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <StackPanel>
            <StackPanel Orientation="Horizontal" Margin="20,25,0,0">
            <Border BorderBrush="Black" BorderThickness="1">
                <TextBlock Width="100" TextAlignment="Right" HorizontalAlignment="Left" Padding="0,2,0,0">User Id : </TextBlock>
            </Border>
            <TextBox Width="100" Margin="3,0,0,0"></TextBox>
        </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="20,25,0,0">
            <Border BorderBrush="Black" BorderThickness="1">
                <TextBlock Width="100" TextAlignment="Right" HorizontalAlignment="Left" Padding="0,2,0,0">Password :</TextBlock>
            </Border>
            <TextBox Width="100"></TextBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="20,25,0,0">
                <Button Margin="10,0,0,0">Login</Button>
                <Button Content="Cancel" Margin="10,0,0,0"/>
            </StackPanel>
    </StackPanel>
</Window>
